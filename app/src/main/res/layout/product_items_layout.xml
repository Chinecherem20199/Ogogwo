<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/product_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textColor="@color/orange"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/product_display_imageView"
            android:layout_below="@+id/product_display_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp">

        </ImageView>

        <TextView
            android:id="@+id/product_display_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/product_display_imageView"
            android:text="Product Price"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/light_red"/>
        <TextView
            android:id="@+id/product_display_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/product_display_price"
            android:text="Product Description"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/light_red"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>